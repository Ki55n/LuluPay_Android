<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:background="@drawable/bottom_sheet_background"
     android:layout_margin="8dp"
     app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="12dp">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             android:textSize="16sp"
             android:id="@+id/tvTransactionState"
             android:text="State: IN_PROGRESS"
             android:textStyle="bold" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             app:layout_constraintStart_toStartOf="parent"
             android:textSize="14sp"
             android:layout_marginTop="4dp"
             app:layout_constraintTop_toBottomOf="@id/tvTransactionState"
             android:id="@+id/tvTransactionSubState"
             android:text="Sub-State: TXN_PREPARED" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             app:layout_constraintStart_toStartOf="parent"
             android:textSize="14sp"
             android:layout_marginTop="4dp"
             app:layout_constraintTop_toBottomOf="@id/tvTransactionSubState"
             android:id="@+id/tvTransactionDate"
             android:text="Date: 2025-02-07" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             app:layout_constraintStart_toStartOf="parent"
             android:textSize="14sp"
             android:layout_marginTop="6dp"
             app:layout_constraintTop_toBottomOf="@id/tvTransactionDate"
             android:id="@+id/tvSenderName"
             android:text="Sender: AJMAN BASHIRMASIH"
             android:textStyle="bold" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             app:layout_constraintStart_toStartOf="parent"
             android:textSize="14sp"
             android:layout_marginTop="2dp"
             app:layout_constraintTop_toBottomOf="@id/tvSenderName"
             android:id="@+id/tvSenderCustomerNumber"
             android:text="Customer No: 7841001220007002" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             app:layout_constraintStart_toStartOf="parent"
             android:textSize="14sp"
             android:layout_marginTop="6dp"
             app:layout_constraintTop_toBottomOf="@id/tvSenderCustomerNumber"
             android:id="@+id/tvReceiverName"
             android:text="Receiver: JOHN ABDULLAH AHMAD"
             android:textStyle="bold" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             app:layout_constraintStart_toStartOf="parent"
             android:textSize="14sp"
             android:layout_marginTop="2dp"
             app:layout_constraintTop_toBottomOf="@id/tvReceiverName"
             android:id="@+id/tvReceiverMobile"
             android:text="Mobile: +910000" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             app:layout_constraintStart_toStartOf="parent"
             android:textSize="14sp"
             android:textColor="@android:color/holo_blue_dark"
             android:layout_marginTop="6dp"
             app:layout_constraintTop_toBottomOf="@id/tvReceiverMobile"
             android:id="@+id/tvTransactionRefNo"
             android:text="Ref No: 1279125103713087"
             android:textStyle="bold" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             app:layout_constraintStart_toStartOf="parent"
             android:textSize="14sp"
             android:layout_marginTop="6dp"
             app:layout_constraintTop_toBottomOf="@id/tvTransactionRefNo"
             android:id="@+id/tvTransactionAmount"
             android:text="Amount: AED 100 â†’ PKR 7582.36"
             android:textStyle="bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>